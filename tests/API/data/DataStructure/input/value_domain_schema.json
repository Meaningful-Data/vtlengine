{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ValueDomain": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name identifier for the Value Domain"
        },
        "setlist": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "description": "List of unique values of the Value Domain"
        },
        "type": {
          "type": "string",
          "enum": ["Integer", "Number", "String", "Boolean", "Date", "Time_Period", "Time", "Duration"],
          "description": "Data type of the Value Domain"
        }
      },
      "required": ["name", "setlist", "type"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {"const": "Integer"}
            }
          },
          "then": {
            "properties": {
              "setlist": {
                "items": {"type": "integer"}
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {"const": "Number"}
            }
          },
          "then": {
            "properties": {
              "setlist": {
                "items": {"type": "number"}
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {"const": "Boolean"}
            }
          },
          "then": {
            "properties": {
              "setlist": {
                "items": {"type": "boolean"}
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {"enum": ["String", "Date", "Time_Period", "Time", "Duration"]}
            }
          },
          "then": {
            "properties": {
              "setlist": {
                "items": {"type": "string"}
              }
            }
          }
        }
      ]
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/ValueDomain"
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ValueDomain"
      },
      "minItems": 1
    }
  ]
}